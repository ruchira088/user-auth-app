{
  "httpPort": 8000,
  "serviceRecheckInterval": 1000,
  "services": {
    "redis": {
      "host": "redis"
    },
    "mongo": {
      "host": "mongo",
      "port": 27017,
      "database": "imageGalleryApp",
      "collections": {
        "users": "users",
        "galleries": "galleries"
      }
    }
  },
  "security": {
    "saltRounds": 10,
    "authenticationHeader": "authenticationToken",
    "sessionTimeout": {
      "unit": "minutes",
      "length": 15
    }
  }
}